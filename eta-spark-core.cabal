name:                eta-spark-core
version:             0.1.1.0
synopsis:            Spark Bindings for Eta
description:         See README.
license:             Apache-2.0
license-file:        LICENSE
author:              Jyothsna Srinivas
maintainer:          jyothsnasrinivas17@gmail.com
copyright:           Jyothsna Srinivas, 2018
category:            Apache Spark
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  exposed-modules:   Spark.Core
                     Spark.Core.Internal.JavaDoubleRDD
                     Spark.Core.Internal.JavaHadoopRDD
                     Spark.Core.Internal.JavaNewHadoopRDD
                     Spark.Core.Internal.JavaPairRDD
                     Spark.Core.Internal.JavaRDD
                     Spark.Core.Internal.JavaRDDLike
                     Spark.Core.Internal.Types
                     Spark.Core.Internal.Methods
                     Spark.Core.Internal.SparkContext
                     Spark.Core.Internal.SparkConf
                     Spark.Core.JavaDoubleRDD
                     Spark.Core.JavaHadoopRDD
                     Spark.Core.JavaNewHadoopRDD
                     Spark.Core.JavaPairRDD
                     Spark.Core.JavaRDD
                     Spark.Core.JavaRDDLike

  -- other-modules:
  -- other-extensions:
  default-extensions:  TypeOperators
                       MagicHash
                       MultiParamTypeClasses
                       FlexibleContexts
                       RankNTypes
                       AllowAmbiguousTypes
                       ScopedTypeVariables
  build-depends:       base >=4.8 && <4.9
                     , ghc-prim
                     , eta-scala-interop
  hs-source-dirs:      src
  default-language:    Haskell2010

executable simple-app-exe
  main-is:             SimpleApp.hs
  hs-source-dirs:      examples
  build-depends:       base >=4.8 && <4.9
                     , eta-spark-core
  default-language:    Haskell2010

source-repository this
  type:                git
  location:            https://github.com/Jyothsnasrinivas/eta-spark-core
  tag:                 0.1.1.0
